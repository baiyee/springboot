<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mchain.mybitt.other.mapper.VersoinLanguageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mchain.mybitt.other.entity.VersoinLanguage">
    <result column="ID" property="id" />
        <result column="versoinId" property="versoinId" />
        <result column="description" property="description" />
        <result column="content" property="content" />
        <result column="locale" property="locale" />
    </resultMap>

    <insert id="insertLanguage" parameterType="com.mchain.mybitt.other.entity.VersoinLanguage">
      insert into tb_versoin_language (versoinId,  description,  content,  `locale`)
      values(#{versoinId},#{description},#{content},#{locale})
    </insert>

    <update id="updateLanguageByVid">
        update tb_versoin_language
        set
        <if test="content != null">
            content = #{content},
        </if>
        <if test="description != null">
            description = #{description}
        </if>
        where versoinId = #{versoinId}
    </update>
</mapper>
